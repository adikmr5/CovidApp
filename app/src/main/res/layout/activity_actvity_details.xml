<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".actvityDetails">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/dname"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:hint="Enter Full Name"
            android:inputType="text"
            android:textSize="17sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/hosname1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/hosname"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginBottom="15sp"
            android:hint="Enter Hospital Name"
            android:inputType="text"
            android:textSize="17sp" />
    </com.google.android.material.textfield.TextInputLayout>




    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Gender"
            android:textSize="17sp" />


        <RadioButton
            android:id="@+id/dmale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/dfemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="17sp" />



    </RadioGroup>





    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        >

        <EditText
            android:id="@+id/dage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="15sp"
            android:hint="Enter your Age"
            android:inputType="number"
            android:textSize="17sp" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        >

        <EditText
            android:id="@+id/dcontact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="15sp"
            android:hint="Enter Contact Number"
            android:inputType="number"
            android:maxLength="10"
            android:textSize="17sp" />
    </com.google.android.material.textfield.TextInputLayout>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foreign Travel History( Enter country)"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/dtravel"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginBottom="15sp"
        android:hint="None"
        android:inputType="text"
        android:textSize="17sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Respiratory Illness( dry cough)"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/dresp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="15sp"
        android:hint="No"
        android:inputType="text"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close physical contact with nCoV case"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/dphyc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="15sp"
        android:hint="No"
        android:inputType="text"
        android:textSize="17sp" />

    <Button
        android:id="@+id/btnnext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit and Consult" />

    </LinearLayout>




</ScrollView>
