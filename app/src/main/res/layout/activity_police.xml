<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".police">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="This section can only be Accessed by authentic policeman of a particular area."
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50sp"
        android:layout_margin="20dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Name"
        android:layout_marginTop="170sp"
        android:layout_marginLeft="65sp"
        android:layout_centerHorizontal="true"
         />

    <EditText
        android:id="@+id/txtid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="police unique id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        />

    <EditText
        android:id="@+id/txtarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Area under surveillance"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"/>

    <Button
        android:id="@+id/btna"
        android:layout_width="168dp"
        android:layout_height="48dp"
        android:text="AUTHENTICATE"
        android:textStyle="bold"
        android:background="@color/quantum_vanillagreen500"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="440dp"/>

</RelativeLayout>