<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:background="#588c7e" />
    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:text="welcome"
        android:textColor="@color/quantum_white_100"
        android:textSize="25sp"
        />
     <TextView
         android:id="@+id/txtusername"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="157dp"
         android:layout_marginTop="10sp"
         android:text=""
         android:textSize="25sp"
         android:textColor="@color/quantum_white_100"
         android:textStyle="bold"
         />



        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Call Helpline"
            android:background="#d4c3cf"
            android:textStyle="bold"
        android:onClick="call"
        />


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"

            >


            <Button

                android:id="@+id/nearHospital"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="nearbyHospital"
                android:text="I HAVE SYMPTOMS"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="#d4c3cf"
                android:textStyle="bold"
                android:textSize="14sp" />

            <Button

                android:id="@+id/chat"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="nearbyHospital"
                android:text="CHAT WITH MEDICAL\n REPRESENTATIVE"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="#eca1a6"
                android:textStyle="bold"
                android:textSize="14sp" />


            <Button
                android:id="@+id/btnrepo"
                android:layout_width="321dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Report for hidden patients/unwanted
                 gatherings"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="#d4c3cf"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

</RelativeLayout>
